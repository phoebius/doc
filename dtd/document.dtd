<!ENTITY % common SYSTEM "common.dtd">
<!ENTITY % index SYSTEM "index.dtd">

%common;

<!ENTITY % contents.class "p">
	<!ELEMENT p (%parsable.class;)*>

<!ELEMENT document (
	title, 
	chapters, 
	authors?, 
	version?
)>

	<!ELEMENT title (#PCDATA)*>
	
	<!ELEMENT chapters (chapter)*>
		<!ELEMENT chapter (%contents.class;|subchapter)*>
		<!ATTLIST chapter
			title			CDATA #IMPLIED
		>
			<!ELEMENT subchapter (%contents.class;)* >
				<!ATTLIST subchapter
					title			CDATA #IMPLIED
				>
	
	<!ELEMENT authors (author)*>
		<!ELEMENT author (#PCDATA)*>
		<!ATTLIST author
			title			CDATA "Author"
		>
	
	<!ELEMENT version (#PCDATA)*>
		
